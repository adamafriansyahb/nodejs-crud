<%- include('../partials/header') %> 

<div class="container login h-100">
    <div class="row h-100 d-flex align-items-center">
        <div class="col-md-4 m-auto">
            <div class="card card-body bg-light">
                <h2 class="mb-4 text-center">Register Form</h2>
                <%- include('../partials/messages') %> 
                <form method="POST" action="/register">
                    <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input name="name" type="text" class="form-control" id="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="mb-3">
                      <label for="email" class="form-label">Email</label>
                      <input name="email" type="email" class="form-control" id="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="mb-3">
                      <label for="password1" class="form-label">Password</label>
                      <input name="password1" type="password" class="form-control" id="password1" value="<%= typeof password1 != 'undefined' ? password1 : '' %>">
                    </div>
                    <div class="mb-3">
                      <label for="password2" class="form-label">Confirm password</label>
                      <input name="password2" type="password" class="form-control" id="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                    </div>

                    <button type="submit" class="btn btn-primary mb-4">Register</button>

                    <div class="text-center">
                        <p>Already have an account? <a class="login-he" href="/login">Login</a></p>
                    </div>
                    
                  </form>
            </div>
        </div>
    </div>
</div>
  




<%- include('../partials/footer') %> 