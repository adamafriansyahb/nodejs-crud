<%- include('../../partials/header') %> 
<%- include('../../partials/navbar') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <%- include('../../partials/messages') %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card p-2" style="width: 24rem;">
        <img src="<%= book.cover.split('lic')[1] %>" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p><strong>Author: </strong><%= book.author.name %></p>
          <p><strong>Page Count: </strong><%= book.pageCount %></p>
          <p><strong>Published At: </strong><%= book.publishedAt.toISOString().split('T')[0] %></p>
          <p><strong>Publisher: </strong><%= book.publisher.name %></p>
          <p><strong>Summary: </strong><%= book.summary %></p>
        </div>
        <div class="container d-flex justify-content-start">
          <div class="row">
            <div class="col">
              <a href="/admin/book/<%= book.id %>/edit" class="btn btn-dark">Edit</a>
            </div>
            <div class="col">
              <form method="POST" action="/admin/book/<%= book.id %>?_method=DELETE">
                <button class="btn btn-danger" type="submit">Remove</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<%- include('../../partials/footer') %> 