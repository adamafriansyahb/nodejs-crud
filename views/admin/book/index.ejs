<%- include('../../partials/header') %> 
<%- include('../../partials/navbar') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <%- include('../../partials/messages') %>
    </div>
  </div>

  <h1>List of Books</h1>
  
  <a href="/admin/book/create" class="btn btn-primary my-4">Add New Book</a>
  
  <div class="mb-5">
    <form action="/admin/book" method="GET">
      <div class="row">
        <div class="col">
          <label for="title" class="form-label">Title</label>
          <input name="title" type="text" class="form-control" id="title" placeholder="Enter title">
        </div>
        <div class="col">
          <label for="title" class="form-label">Author</label>
          <input name="title" type="text" class="form-control" id="title" placeholder="Enter title">
        </div>
      </div>
  
      <div class="row">
        <div class="col">
          <label for="publishedBefore" >Published before</label>
          <input name="publishedBefore" type="date" class="form-control">
        </div>
        <div class="col">
          <label for="publishedAfter">Published after</label>
          <input name="publishedAfter" type="date" class="form-control">
        </div>
      </div>
  
      <button type="submit" class="mt-3 btn btn-primary">Search</button>
    </form>
  </div>
  
  <div class="row d-flex justify-content-center">
      <% books.forEach((book) => { %> 
        <div class="col-md-2 mb-4">
          <a class="book-cover" href="/admin/book/<%= book.id %>">
            <div class="card">
              <img src="<%= book.cover.split('lic')[1] %>" class="card-img-top">
              <!-- <div class="card-body"> -->
                <!-- <h5 class="card-title"><%= book.title %></h5> -->
              <!-- </div> -->
            </div>
          </a>
        </div>
      <% }) %> 
  </div>

  

</div>


<%- include('../../partials/footer') %> 

